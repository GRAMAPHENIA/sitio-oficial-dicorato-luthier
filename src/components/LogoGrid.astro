---
// src/components/LogoGrid.astro

const { logos } = Astro.props;
---

<div class="bg-white max-w-7xl py-24 sm:py-32 mx-auto px-6 lg:px-8 md:rounded-xl">
  <div class="mx-auto">
    <h2 class="text-center text-7xl font-semibold text-gray-900 pb-10">Marcas que uso</h2>
    <div class="mx-auto mt-10 grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-5">
      {logos.map((logo, index) => (
        <div class="col-span-2 flex items-center justify-center lg:col-span-1" key={index}>
          <img class="max-w-full max-h-full object-contain rounded-full" src="/public/image.webp" alt={logo.alt} />
        </div>
      ))}
    </div>
  </div>
</div>
